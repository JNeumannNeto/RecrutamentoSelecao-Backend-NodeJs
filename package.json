{
  "name": "recrutamento-selecao-backend-nodejs",
  "version": "1.0.0",
  "description": "Sistema de Recrutamento e Seleção - Backend Node.js com arquitetura de microserviços",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:auth": "nodemon src/services/auth-service/server.js",
    "dev:job": "nodemon src/services/job-service/server.js",
    "dev:candidate": "nodemon src/services/candidate-service/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "seed": "npx sequelize-cli db:seed:all",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "nodejs",
    "express",
    "microservices",
    "recruitment",
    "jobs",
    "candidates",
    "api",
    "rest"
  ],
  "author": "Sistema de Recrutamento e Seleção",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "sequelize": "^6.35.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.11",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "http-proxy-middleware": "^2.0.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "sequelize-cli": "^6.6.2",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-repo/RecrutamentoSelecao-Backend-NodeJs.git"
  },
  "bugs": {
    "url": "https://github.com/your-repo/RecrutamentoSelecao-Backend-NodeJs/issues"
  },
  "homepage": "https://github.com/your-repo/RecrutamentoSelecao-Backend-NodeJs#readme"
}
